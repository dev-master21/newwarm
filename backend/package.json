{
  "name": "warmplus-backend",
  "version": "1.0.0",
  "description": "WARM+ Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/migrations/migration.ts",
    "seed": "ts-node src/migrations/seed.ts",
    "start:prod": "NODE_ENV=production node dist/server.js"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node ./src/server.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "dayjs": "^1.11.10",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "ical": "^0.8.0",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/fs-extra": "^11.0.4"
  }
}